<%link_to "Back to all Movies", :movies %>

<%= link_to image_tag(@movie.poster_image_url), :movie %>
  <h2><%= @movie.title %> (<%= link_to "edit", :edit_movie %>, <%= link_to "delete", :movie, method: :delete, confirm: "You sure?" %>)</h2>
  <h3><%= @movie.release_date %></h3>
  <h4>Dir. <%= @movie.director %> | <%= @movie.runtime_in_minutes %> minutes</h4>
  <p><%= @movie.description %></p>
