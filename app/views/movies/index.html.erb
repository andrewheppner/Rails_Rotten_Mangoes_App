<h1>Rotten Mangoes</h1>
<%= link_to "Submit a Movie", :new_movie %>
<hr>
<% @movies.each do |movie| %>
<%= link_to image_tag(movie.poster_image_url), :movie %>
<h2><%= link_to movie.title, :movie %>
<h3><%= movie.release_date %>
<h4>Dir.<%=move.director %> | <% movie.runtime_in_minutes %> minutes </h4>
<p><%= movie.description %></p>
<hr>
<% end %> 




